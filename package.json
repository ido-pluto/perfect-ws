{
  "name": "perfect-ws",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsc --build tsconfig.json",
    "build:local": "tsc --build tsconfig.json --sourceMap",
    "test:coverage": "vitest run --coverage",
    "generate-coverage-badge": "coverage-badges -s coverage/coverage-summary.json -o coverage/badge.svg",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "websocket",
    "express",
    "ws",
    "socket",
    "communication",
    "protocol"
  ],
  "author": "Ido S.",
  "license": "MIT",
  "type": "module",
  "description": "Like Express.js for WebSockets",
  "bugs": {
    "url": "https://github.com/ido-pluto/perfect-ws/issues"
  },
  "homepage": "https://github.com/ido-pluto/perfect-ws#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/ido-pluto/perfect-ws?sponsor=1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ido-pluto/perfect-ws.git"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "bson": "^6.10.4",
    "dot-prop": "^10.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "^7.1.0",
    "@types/async-retry": "^1.4.9",
    "@types/node": "^24.7.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "coverage-badges-cli": "^2.2.0",
    "happy-dom": "^19.0.2",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  },
  "directories": {
    "example": "examples",
    "test": "tests"
  }
}
